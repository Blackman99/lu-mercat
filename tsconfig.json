{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es2020",
		"lib": ["es2020", "DOM"],
		"target": "es2019",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"paths": {
			"$lib": ["src/lib/"],
			"$lib/*": ["src/lib/*"],
			"$cmp": ["src/components/"],
			"$cmp/*": ["src/components/*"],
			"$stores" : ["src/stores/"],
			"$stores/*" : ["src/stores/*"],
			"$utils": ["src/utils/"],
			"$utils/*": ["src/utils/*"]
		}
	},	
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"]
}